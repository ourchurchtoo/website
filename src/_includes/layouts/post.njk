---
layout: /layouts/base.njk
---
<div class='row center-xs'>
  <div class='col-xs-12 col-md-7 text-left'>
    <div class='section section--standard section--post'>
      <div class='post__header text-center'>
        <h1>{{ title }}</h1>
        {% if ignore_info %}
        {% else %}
          {{ contributor }}
          <h4>written on {{ page.date | readableDate }} by {% for person in contributor %}<a class='link--color' href='{% for item in collections.contributors %}
          {% if item.data.title === person %}
            {{ item.data.permalink }}
          {% endif %}
        {% endfor %}'>{{ person }}</a>
        {% endfor %}</h4>
        {% endif %}
        <ul class='social'>
          <li><a target='_blank' href='https://www.facebook.com/sharer/sharer.php?u=https://ourchurchtoo.com{{ permalink }}'><i class='fab fa-facebook'></i></a></li>
          <li><a target='_blank' href='https://pinterest.com/pin/create/button/?url=https://ourchurchtoo.com{{ permalink }}&media=https://ourchurchtoo.com{{ image }}'><i class='fab fa-pinterest'></i></a></li>
          <li><a target='_blank' href='https://twitter.com/intent/tweet?url=https://ourchurchtoo.com{{ permalink }}'><i class='fab fa-twitter'></i></a></li>
          <li><a target='_blank' href='mailto:?body=https://ourchurchtoo.com{{ permalink }}&subject={{ title }}'><i class='fal fa-envelope-open-text'></i></a></li>
        </ul>
      </div>

      {% if image %}
        <img src='{{ image }}' />
        {% if artist %}
          <p>Art by <a class='link--color' href='{% for item in collections.contributors %}
          {% if item.data.title === artist %}
            {{ item.data.permalink }}
          {% endif %}
        {% endfor %}'>{{ artist }}</a></p>
        {% endif %}
      {% endif %}

      {{ content | safe }}

      {% if ignore_info %}
      {% else %}
        <div class='post__footer'>
          <p>
            <a class='link--color' href='/archive/'><i class='fal fa-long-arrow-left'></i> View all posts</a>
          </p>
        </div>
      {% endif %}
    </div>
  </div>
</div>