<div class='col col-xs-12 col-sm-6 col-md-3 contributor-mini__wrapper'>
  <a href='{{ person.url }}'>
    <div class='contributor-mini'>
      {% set image = person.data.image %}
      {% include 'partials/contributor-image.njk' %}
      <div class='item__text'>
        <h2 class='item__title'>{{ person.data.title }}</h2>
        <h4 class='item__info--sub'>{{ person.data.role }}</h4>
      </div>
    </div>
  </a>
  {% set instagram = person.data.instagram %}
  {% set twitter = person.data.twitter %}
  {% include 'partials/contributor-social.njk' %}
</div>