{% set menuList = [
  {
    id: 'home',
    name: 'home',
    link: '/'
  },
  {
    id: 'about',
    name: 'about',
    link: '/about/'
  },
  {
    id: 'contributors',
    name: 'contributors',
    link: '/contributors/'
  },
  {
    id: 'archive',
    name: 'archive',
    link: '/archive/'
  },
  {
    id: 'get-involved',
    name: 'get involved',
    link: '/about/#get-involved'
  }
] %}

<div class='menu__container'>
  <div class='container container-fluid'>
    <div class='row'>
      <div class='col-xs-12'>
        <div class='menu'>
          {% if config.env === 'development' %}
            <a href='http://localhost:4000' class='logo link-hide'>
          {% else %}
            <a href='https://ourchurchtoo.com' class='logo link-hide'>
          {% endif %}
            <h1><img src='/img/uploads/logo_black.png' alt='Our Church Too logo'/> <span>Our Church Too</span></h1>
          </a>
          <div class='menu__wrapper'>
            <input type='checkbox' id='menu-checkbox' class='menu__checkbox'>
            <label for='menu-checkbox' class='menu__icon'>
              <span>menu</span>
              <i class='fal fa-bars'></i>
              <i class='fal fa-times'></i>
            </label>
            <div class='menu__content' style='display: none'>
              <div class='menu__links'>
                <ul class='links'>
                  {% for nav in menuList %}
                    {% set isCurrent = (menukey === nav.id) %}
                    {% set isParent = nav.link != '/' and nav.link in page.url %}
                    <li class='menu__item {% if isCurrent or isParent %}menu__item--active{% endif %}'>
                      <a class='link--exclude' href='{{ nav.link }}' target='{% if nav.blank %}_blank{% endif %}'>
                        {{ nav.name }}
                      </a>
                    </li>
                  {% endfor %}
                  <li class='menu__item menu__item--search'>
                    {# <a class='link--exclude' href="/search" id="search-link"><i class='far fa-search'></i></a> #}
                    <input class='toggle__input toggle__input--search' type='checkbox' id='toggle-search'>
                    <label class='toggle__label' for='toggle-search'>
                      <span class='toggle__label--off'>search <i class='far fa-search'></i></span>
                      <span class='toggle__label--on'>close <i class='far fa-search'></i></span>
                    </label>
                    <form action="https://duckduckgo.com/" method="get" autocomplete="off" class="search toggle__item">
                      <input type="hidden" name="sites" value="nothingrandom.com" />
                      <input type="hidden" name="k1" value="-1"/>
                      <input type="hidden" name="kae" value="d"/>
                      <input type="text" name="q" placeholder='Search...' id="search-input"></p>
                      <ul class='search-results'>
                      </ul>
                    </form>
                  </li>
                </ul>
                {# {% include 'partials/social.njk' %} #}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>